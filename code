#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,i,j,k;
    string s,s1;
    cin>>s;
    n=s.length();
    for(i=0;i<n*2;i++){
        for(j=0;j<n;j++){
            if(i<n&&(i+j)>=(n-1)){
                cout<<s[(i+j)-(n-1)];
            }
            else if((i>=n&&(i-j)<=n)){
                cout<<s[n-(i-j)];
            }
            else{
                cout<<" ";
            }
            }
        cout<<"\n";
    }
}
